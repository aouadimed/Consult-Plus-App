<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"

    >



    <View
        android:id="@+id/card"
        android:layout_width="144dp"
        android:layout_height="171dp"

         android:background="@drawable/bt_rectangle"/>


    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/box_circle" />

    <ImageView
        android:id="@+id/emoji"
        android:layout_width="27dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/dentistry_emoji"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="5sp"
        android:layout_marginTop="115dp">

        <TextView
            android:id="@+id/specialties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eastman_medium"


            android:lineSpacingExtra="-3sp"
            android:text="Dentistry"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/specialties_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_regular"
                android:gravity="top"
                android:lineSpacingExtra="-2sp"
                android:text="70"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="top"
                android:lineSpacingExtra="-2sp"
                android:text="doctors"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>